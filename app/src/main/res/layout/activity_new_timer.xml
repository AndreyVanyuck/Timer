<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CreateWorkoutActivity">

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_gravity="start"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prepair_image"
            android:src="@drawable/ic_baseline_directions_walk_24"
            android:minWidth="100dp"
            android:minHeight="100dp"
            />
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/sequenceItemTitle"
                android:text="@string/prepair"
                android:textAlignment="center"
                android:textColor="#0000ff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/minus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/minus_prepair"/>

                <EditText
                    android:id="@+id/prepair_value"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:textColor="#0000ff"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="Number"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/plus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/plus_prepair"/>
            </LinearLayout>

        </LinearLayout>
    </TableRow>

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_gravity="start"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/work_image"
            android:src="@drawable/ic_baseline_fitness_center_24"
            android:minWidth="100dp"
            android:minHeight="100dp"
            />
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/work_title"
                android:text="@string/work"
                android:textAlignment="center"
                android:textColor="#0000ff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/minus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/minus_work"/>

                <EditText
                    android:id="@+id/work_value"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:textColor="#0000ff"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="Number"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/plus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/plus_work"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_gravity="start"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rest_image"
            android:src="@drawable/ic_baseline_directions_walk_24"
            android:minWidth="100dp"
            android:minHeight="100dp"
            />
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/rest_title"
                android:text="@string/rest"
                android:textAlignment="center"
                android:textColor="#0000ff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/minus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/minus_rest"/>

                <EditText
                    android:id="@+id/rest_value"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:textColor="#0000ff"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="Number"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/plus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/plus_rest"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_gravity="start"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cycle_image"
            android:src="@drawable/ic_baseline_sync_24"
            android:minWidth="100dp"
            android:minHeight="100dp"
            />
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/cycle_title"
                android:text="@string/cycle"
                android:textAlignment="center"
                android:textColor="#0000ff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/minus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/minus_cycle"/>

                <EditText
                    android:id="@+id/cycle_value"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:textColor="#0000ff"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="Number"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/plus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/plus_cycle"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_gravity="start"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_image"
            android:src="@drawable/ic_baseline_update_24"
            android:minWidth="100dp"
            android:minHeight="100dp"
            />
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/set_title"
                android:text="@string/set"
                android:textAlignment="center"
                android:textColor="#0000ff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/minus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/minus_set"/>

                <EditText
                    android:id="@+id/set_value"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:textColor="#0000ff"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="Number"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/plus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/plus_set"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_gravity="start"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calm_image"
            android:src="@drawable/ic_baseline_weekend_24"
            android:minWidth="100dp"
            android:minHeight="100dp"
            />
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/calm_title"
                android:text="@string/calm"
                android:textAlignment="center"
                android:textColor="#0000ff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/minus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/minus_calm"/>

                <EditText
                    android:id="@+id/calm_value"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:textColor="#0000ff"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="Number"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/plus"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:textColor="#fefdfa"
                    android:background="@drawable/rouded_button"
                    android:id="@+id/plus_calm"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <codes.side.andcolorpicker.hsl.HSLColorPickerSeekBar
        android:id="@+id/color_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hslColoringMode="pure"
        app:hslMode="hue"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center">


        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Save"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</LinearLayout>